<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.ict.pretzel_admin.mapper.AdminMapper">
  <!-- 로그인 -->
  <select id="login" resultType="AdminVO">
    select * from admins where admin_id = #{admin_id}
  </select>

  <!-- 구독별 카운트 -->
  <select id="sub_count" resultType="SubsCountVO">
    SELECT COALESCE(subs, 'null') AS subs, COUNT(*) AS count
    FROM users
    WHERE status = 1
    GROUP BY subs;
  </select>

  <!-- 유저 전체 수 -->
  <select id="total_user">
    select count(*) from users
  </select>

  <!-- 유저 리스트 -->
  <select id="user_list" parameterType="Paging" resultType="UserVO">
    select * from users 
    where user_id like concat('%', #{keyword}, '%')
        or email like concat('%', #{keyword}, '%')
        or name like concat('%', #{keyword}, '%')
    limit #{numPerPage} offset #{offset}
  </select>

  <!-- 유저 상세 정보 -->
  <select id="user_detail" resultType="UserVO">
    select * from users where user_id = #{user_id}
  </select>

  <!-- 특정 유저 프로필 리스트 -->
  <select id="profile_list" resultType="ProfileVO">
    select * from profiles where user_id = #{user_id}
  </select>

  <!-- 프로필 상세 -->  
  <select id="profile_detail" resultType="ProfileVO">
    select * from profiles where profile_idx = #{profile_idx}
  </select>
  
  <!-- 유저 정지 -->
  <update id="user_stop" parameterType="UserVO">
    update users 
    set status = 0, admin_id = #{admin_id} 
    where user_id = #{user_id}
  </update>
  
  <!-- 유저 복귀(활성화) -->
  <update id="user_recover" parameterType="UserVO">
    update users 
    set status = 1, admin_id = #{admin_id} 
    where user_id = #{user_id}
  </update>

  <!-- 비밀번호 초기화 -->
  <update id="pwd_reset" parameterType="UserVO">
    update users 
    set pwd = #{pwd} 
    where user_id = #{user_id}
  </update>

  <!-- 신고 개수 -->
  <select id="total_report">
    select count(*) from reports
  </select>

  <!-- 신고 리스트 -->
  <select id="report_list" parameterType="Paging" resultType="ReportVO">
    select * from reports 
    order by status desc, report_idx
    limit #{numPerPage} offset #{offset}
  </select>

  <!-- 미처리 신고 개수 -->
  <select id="report_count" resultType="int">
    select count(*) from reports where status = 1
  </select>

  <!-- 신고 상세 -->
  <select id="report_detail" resultType="ReportVO">
    select * from reports where report_idx = #{report_idx}  
  </select>

  <!-- 신고당한 리뷰 -->
  <select id="reported_review" resultType="ReviewVO">
    select * from reviews where review_idx = #{review_idx}
  </select>

  <!-- 신고 처리 -->
  <update id="report_ok" parameterType="ReportVO">
    update reports 
    set status = 0, admin_id = #{admin_id} 
    where report_idx = #{report_idx}
  </update>

  <!-- 1대1문의 개수 -->
  <select id="total_quest">
    select count(*) from questions
  </select>

  <!-- 1대1문의 리스트 -->
  <select id="quest_list" parameterType="Paging" resultType="QuestionVO">
    select * from questions 
    order by status desc, question_idx
    limit #{numPerPage} offset #{offset}
  </select>

  <!-- 미처리 1대1문의 개수 -->
  <select id="quest_count" resultType="int">
    select count(*) from questions where status = 1
  </select>

  <!-- 1대1문의 상세 -->
  <select id="question_detail" resultType="QuestionVO">
    select * from questions where question_idx = #{question_idx}
  </select>

  <!-- 1대1문의 답변 -->
  <update id="quest_answer" parameterType="QuestionVO">
    update questions 
    set answer = #{answer}, ansdate = NOW(), admin_id = #{admin_id}, status = 0
    where question_idx = #{question_idx}
  </update>

  <!-- 관리자 상세 -->
  <select id="admin_detail" resultType="AdminVO">
    select * from admins where admin_id = #{admin_id}
  </select>

    

</mapper>
